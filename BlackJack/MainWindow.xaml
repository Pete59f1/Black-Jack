<Window x:Class="BlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="txt_Player1Name" ToolTip="First player name" HorizontalAlignment="Left" Height="23" Margin="662,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txt_Plauer2Name" ToolTip="Second player name" HorizontalAlignment="Left" Height="23" Margin="662,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txt_DealerName" ToolTip="Dealer name" HorizontalAlignment="Left" Height="23" Margin="662,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="btn_NewGame" Content="New game" HorizontalAlignment="Left" Margin="662,150,0,0" VerticalAlignment="Top" Width="75" Click="Btn_NewGame_Click"/>

    </Grid>
</Window>
