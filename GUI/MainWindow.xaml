<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="btn_NewGame" Content="New game" HorizontalAlignment="Left" Margin="662,160,0,0" VerticalAlignment="Top" Width="75" Click="Btn_NewGame_Click"/>
        <TextBox Name="txt_FirstPlayerName" HorizontalAlignment="Left" Height="23" Margin="662,10,0,0" TextWrapping="Wrap" ToolTip="First player" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txt_DealerName" HorizontalAlignment="Left" Height="23" Margin="662,110,0,0" TextWrapping="Wrap" ToolTip="Dealer" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txt_SecondPlayerName" HorizontalAlignment="Left" Height="23" Margin="662,60,0,0" TextWrapping="Wrap" ToolTip="Second player" VerticalAlignment="Top" Width="120"/>
        <Label Name="lbl_FPlayerName" Content="Label" HorizontalAlignment="Left" Margin="65,27,0,0" VerticalAlignment="Top"/>
        <Label Name="lbl_SPlayerName" Content="Label" HorizontalAlignment="Left" Margin="195,27,0,0" VerticalAlignment="Top"/>
        <Label Name="lbl_DealerName" Content="Label" HorizontalAlignment="Left" Margin="325,27,0,0" VerticalAlignment="Top"/>
        <Label Name="lbl_FPlayerPoints" Content="Label" HorizontalAlignment="Left" Margin="65,276,0,0" VerticalAlignment="Top"/>
        <Label Name="lbl_SPlayerPoints" Content="Label" HorizontalAlignment="Left" Margin="195,276,0,0" VerticalAlignment="Top"/>
        <Label Name="lbl_DealerPoints" Content="Label" HorizontalAlignment="Left" Margin="325,276,0,0" VerticalAlignment="Top"/>
        <ListBox Name="lb_FPlayerCards" HorizontalAlignment="Left" Height="135" Margin="33,110,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox Name="lb_SPlayerCards" HorizontalAlignment="Left" Height="135" Margin="164,110,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox Name="lb_DealerCards" HorizontalAlignment="Left" Height="135" Margin="293,110,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
