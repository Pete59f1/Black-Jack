<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="btn_NewGame" Content="New game" HorizontalAlignment="Left" Margin="662,180,0,0" VerticalAlignment="Top" Width="75" Click="Btn_NewGame_Click"/>
        <TextBox Name="txt_FirstPlayerName" HorizontalAlignment="Left" Height="23" Margin="662,10,0,0" TextWrapping="Wrap" ToolTip="First player" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txt_DealerName" HorizontalAlignment="Left" Height="23" Margin="662,124,0,0" TextWrapping="Wrap" ToolTip="Dealer" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txt_SecondPlayerName" HorizontalAlignment="Left" Height="23" Margin="662,70,0,0" TextWrapping="Wrap" ToolTip="Second player" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
